<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.users.authentication.activity.EditPasswordActivity">

    <!-- action bar -->
    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey6"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:src="@drawable/left"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Password"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/liner0"
        android:layout_below="@id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="40dip"
        android:layout_marginRight="30dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_pswLogo0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15.67dp"
            android:src="@drawable/password_grey" />

        <com.comp90018.assignment2.utils.view.ClearWriteEditText
            android:id="@+id/old_passWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:maxLength="80"
            android:maxLines="1"
            android:textColor="#2C2C2C"
            android:textColorHint="#808080"
            android:textSize="16sp" />

        <View
            android:id="@+id/psw_line0"
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/old_passWord"
            android:layout_marginTop="10dp"
            android:background="@color/blue_light" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/liner1"
        android:layout_below="@id/liner0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="23dip"
        android:layout_marginRight="30dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_pswLogo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15.67dp"
            android:src="@drawable/password_grey" />

        <com.comp90018.assignment2.utils.view.ClearWriteEditText
            android:id="@+id/new_passWord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLength="80"
            android:maxLines="1"
            android:textColor="#2C2C2C"
            android:textColorHint="#808080"
            android:textSize="16sp" />

        <View
            android:id="@+id/psw_line"
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/new_passWord"
            android:layout_marginTop="10dp"
            android:background="@color/blue_light" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/liner2"
        android:layout_below="@id/liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="23dip"
        android:layout_marginRight="30dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_pswLogo2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15.67dp"
            android:src="@drawable/password_grey" />

        <com.comp90018.assignment2.utils.view.ClearWriteEditText
            android:id="@+id/new_passWord_repeat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="New Password Again"
            android:inputType="textPassword"
            android:maxLength="80"
            android:maxLines="1"
            android:textColor="#2C2C2C"
            android:textColorHint="#808080"
            android:textSize="16sp" />

        <View
            android:id="@+id/psw_line2"
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/new_passWord_repeat"
            android:layout_marginTop="10dp"
            android:background="@color/blue_light" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_below="@id/liner2"
        android:layout_height="40dp"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="36dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/btn_primary_selector"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>