<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_name_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Publish GoodOG"
                android:layout_marginBottom="30dp"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#fff"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/liner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15.67dp"
                    android:src="@drawable/price_publish" />

                <com.comp90018.assignment2.utils.view.ClearWriteEditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Price"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#2C2C2C"
                    android:textColorHint="#808080"
                    android:textSize="16sp" />
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/price"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="23dip"
                android:layout_marginRight="30dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15.67dp"
                    android:src="@drawable/brand_publish" />
                <com.comp90018.assignment2.utils.view.ClearWriteEditText
                    android:id="@+id/brand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Brand"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:textColor="#2C2C2C"
                    android:textColorHint="#808080"
                    android:textSize="16sp" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/brand"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="23dip"
                android:layout_marginRight="30dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/description_publish" />
                <com.comp90018.assignment2.utils.view.ClearWriteEditText
                    android:id="@+id/description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Description"
                    android:maxLength="80"
                    android:maxLines="1"
                    android:textColor="#2C2C2C"
                    android:textColorHint="#808080"
                    android:textSize="16sp" />
                <View
                    android:id="@+id/psw_line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/description"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="23dip"
                android:layout_marginRight="30dip"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15.67dp"
                    android:src="@drawable/quality_publish" />

                <Spinner
                    android:id="@+id/quality"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:entries="@array/quality_arrays"
                    android:hint="quality"
                    android:maxLength="80"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/psw_line4"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/quality"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="23dip"
                android:layout_marginRight="30dip"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logo5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15.67dp"
                    android:src="@drawable/category_publish" />
                <Spinner
                    android:id="@+id/category"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:maxLines="1"
                    android:maxLength="80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <View
                    android:id="@+id/psw_line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/category"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/liner6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="23dip"
                android:layout_marginRight="30dip"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15.67dp"
                    android:src="@drawable/category_publish" />
                <Spinner
                    android:id="@+id/subcategory"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:maxLines="1"
                    android:maxLength="80"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="0.67dp"
                    android:layout_below="@id/subcategory"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue_light" />
            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:columnCount="2">
                <ImageView
                    android:id="@+id/pf_add"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="28dp"
                    android:src="@drawable/add_product"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pf_collection"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/upload"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="-80dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/upload"/>
            </GridLayout>
            <Button
                android:id="@+id/btn_publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dip"
                android:layout_marginTop="8dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/btn_primary_selector"
                android:text="Publish"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>