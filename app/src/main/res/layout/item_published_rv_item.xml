<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- click to product details -->
    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey6">

        <com.comp90018.assignment2.utils.view.OvalImageView
            android:id="@+id/iv_product_first"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_image"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/text_product_desc_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_product_first"
            android:maxLength="20"
            android:maxLines="1"
            android:text="product_desc"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_item_price"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textColor="@color/red"
            android:text="$ Loading..."
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_product_first"
            android:layout_below="@id/text_product_desc_cut"/>

        <TextView
            android:id="@+id/text_product_status"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_below="@id/text_item_price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_product_first"
            android:text="On Sell..."
            android:textColor="@color/grey1"
            android:textSize="15sp"
            android:gravity="left|center"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_product_first"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/grey1" />

        <Button
            android:id="@+id/btn_r"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/divider"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_primary_selector"
            android:text="button_r"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_l"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/btn_secondary_shape"
            android:text="button_r"
            android:textColor="@color/blue"
            android:textSize="11sp"
            android:layout_below="@id/divider"
            android:layout_toLeftOf="@id/btn_r"
            android:textAllCaps="false"
            android:layout_marginRight="8dp"
            />

        <Button
            android:id="@+id/btn_s"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/btn_danger_selector"
            android:text="button_s"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_below="@id/divider"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_marginRight="8dp"
            />

<!--        <Button-->
<!--            android:id="@+id/btn_l"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="35dp"-->
<!--            android:layout_below="@id/item_price"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:text="button_r"-->
<!--            android:textSize="11sp"/>-->

    </RelativeLayout>

</LinearLayout>