<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.comp90018.assignment2.utils.view.OvalImageView
        android:id="@+id/img_product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_image"/>

    <TextView
        android:id="@+id/text_product_description_cut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:text="Loading, stand by..."/>

    <LinearLayout
        android:id="@+id/ll_labels"
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.donkingliang.labels.LabelsView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelBackground="@drawable/label_bg"
            app:labelTextColor="@color/red"
            app:labelTextSize="10dp"
            app:labelTextPaddingTop="2dp"
            app:labelTextPaddingBottom="2dp"
            app:labelTextPaddingLeft="5dp"
            app:labelTextPaddingRight="5dp"
            app:lineMargin="3dp"
            app:wordMargin="5dp"
            app:maxLines="1"
            app:isIndicator="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pricing_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_product_price"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/red"
            android:text="Loading..."
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/text_likes"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:text="loading..."
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_profile"
        android:layout_width="150dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/default_avatar"/>

        <TextView
            android:id="@+id/text_nickname"
            android:layout_marginLeft="3dp"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="loading..."
            android:gravity="left"
            android:layout_gravity="center"/>

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/RatingBar"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:scaleX=".5"
            android:scaleY=".5"
            android:stepSize="0.1"
            android:transformPivotX="0dp"
            android:transformPivotY="10dp"
            />

    </LinearLayout>
</LinearLayout>